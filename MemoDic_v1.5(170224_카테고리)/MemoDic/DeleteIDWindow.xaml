<Window x:Class="MemoDic.DeleteIDWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoDic"
        mc:Ignorable="d"
        Title="Delete ID" Height="220.562" Width="225">
    <Grid>
        <PasswordBox x:Name="PB_ConfirmPW" HorizontalAlignment="Left" Margin="34,24,0,0" VerticalAlignment="Top" Width="144" Height="23" PasswordChanged="PB_ConfirmPW_PasswordChanged"/>
        <TextBlock x:Name="TBL_ConfirmPW" IsHitTestVisible="False" Text=" Confirm PW" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="{Binding Margin, ElementName=PB_ConfirmPW}" Foreground="DarkGray"/>
        <Button x:Name="BTT_OK" Content="OK" HorizontalAlignment="Left" Height="31" Margin="26,134,0,0" VerticalAlignment="Top" Width="59" Click="BTT_OK_Click"/>
        <Button x:Name="BTT_Cancel" Content="Cancel" HorizontalAlignment="Left" Height="31" Margin="130,134,0,0" VerticalAlignment="Top" Width="59" Click="BTT_Cancel_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="26,62,0,0" TextWrapping="Wrap" Text="Are you sure to delete ID? Once you delete ID, it never be recovered." VerticalAlignment="Top" Width="167"/>
    </Grid>
</Window>
